@model asp.net.Models.Propietario;
@{
    ViewData["Title"] = "Buscar Propietario";
}

<h1>Búsqueda de Propietarios</h1>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="q" class="control-label">Nombre/Apellido/DNI:</label>
            <input type="text" class="form-control" placeholder="Escriba para buscar..." id="q" onkeyup="buscarPropietarioEnVivo(this)" autocomplete="off" />

        </div>
    </div>
</div>
<div id="resultado-busqueda">
    <!-- Los resultados de la búsqueda en vivo se mostrarán aquí -->
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
